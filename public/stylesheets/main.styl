// MIXINS
clearfix()
    zoom 1
    &:before, &:after
        content ""
        display table
    &:after
        clear both


// VARIABLES
black-color = #393939
link-color = #93625e
hover-color = #cf928c
active-color = #906862


// HTML
html
    font-family "Open Sans"
    color black-color


// LINKS
a
    color link-color
a:hover
    color hover-color
a:active
    color active-color


// BACKGROUNDS
.beige-background
    background-image url("/images/beige-background.png")
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
        &
            background-image url("/images/beige-background@2x.png")
            background-size 100px 100px

.silver-background
    background-image url("/images/silver-background.png")
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
        &
            background-image url("/images/silver-background@2x.png")
            background-size 100px 100px

.beige-background-on-phone
    @media (max-width: 767px)
        &
            background-image url("/images/beige-background.png")
    @media (-webkit-min-device-pixel-ratio: 2) and (max-width: 767px), (min-resolution: 192dpi) and (max-width: 767px)
        &
            background-image url("/images/beige-background@2x.png")
            background-size 100px 100px

.silver-background-on-phone
    @media (max-width: 767px)
        &
            background-image url("/images/silver-background.png")
    @media (-webkit-min-device-pixel-ratio: 2) and (max-width: 767px), (min-resolution: 192dpi) and (max-width: 767px)
        &
            background-image url("/images/silver-background@2x.png")
            background-size 100px 100px

.beige-to-silver-wave
    background-image url("/images/beige-to-silver-wave.png")
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
        &
            background-image url("/images/beige-to-silver-wave@2x.png")
            background-size 52px 16px

.silver-to-beige-wave
    background-image url("/images/silver-to-beige-wave.png")
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
        &
            background-image url("/images/silver-to-beige-wave@2x.png")
            background-size 52px 16px

.beige-to-silver-wave-on-phone
    @media (max-width: 767px)
        &
            background-image url("/images/small-beige-to-silver-wave.png")
    @media (-webkit-min-device-pixel-ratio: 2) and (max-width: 767px), (min-resolution: 192dpi) and (max-width: 767px)
        &
            background-image url("/images/small-beige-to-silver-wave@2x.png")
            background-size 20px 12px

.silver-to-beige-wave-on-phone
    @media (max-width: 767px)
        &
            background-image url("/images/small-silver-to-beige-wave.png")
    @media (-webkit-min-device-pixel-ratio: 2) and (max-width: 767px), (min-resolution: 192dpi) and (max-width: 767px)
        &
            background-image url("/images/small-silver-to-beige-wave@2x.png")
            background-size 20px 12px

.beige-to-silver-wave, .silver-to-beige-wave, .beige-to-silver-wave-on-phone, .silver-to-beige-wave-on-phone
    height 16px
    margin 0
    border none

.beige-to-silver-wave-on-phone, .silver-to-beige-wave-on-phone
    @media (max-width: 767px)
        height 12px

.hide-on-phone
    @media (max-width: 767px)
        display none

// HEADER
.header
    padding 60px 0
    clearfix()

    .header-logo
        width 440px
        height 159px
        margin 0 auto

    .header-contacts
        width 880px
        margin -90px auto 90px
        padding 0
        list-style none
        font-size 21px
        font-style italic
        font-weight 300

        .header-contacts-email
            float left

            object
                width 20px
                height 14px
                margin-right 7px

        .header-contacts-phone
            float right

            object
                position relative
                top 2px
                width 20px
                height 24px
                margin-right 0px

// tablet and phone
@media (max-width: 979px)
    .header
        padding 30px 0

        .header-logo
            width 360px
            height 130px

        .header-contacts
            width 730px
            margin -75px auto 75px

            object
                display none

// phone
@media (max-width: 767px)
    .header
        padding 10px 0

        .header-logo
            width 300px
            height 109px

        .header-contacts
            width 300px
            margin 0 auto
            font-size 16px

            .header-contacts-email, .header-contacts-phone
                padding 10px 0

// SLOGAN
.slogan .slogan-object
    width 845px
    height 404px
    margin 0 auto
    padding 80px 0

    @media (max-width: 979px)
        width 743px
        height 356px
        padding 45px 0
