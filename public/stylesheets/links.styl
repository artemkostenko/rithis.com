.links
    responsive width 940px 740px 300px
    responsive margin, 80px auto 100px, \
                       50px auto 100px, \
                       15px auto 25px
    padding 0
    list-style none
    clearfix()

    .links-item
        float left
        responsive font-size 35px same 16px

        // first line
        &.links-item-portfolio, &.links-item-vacancies
            responsive width 470px 370px 150px
            responsive margin-bottom 80px 70px 25px

            .links-item-link
                display block

                // fix vacancies
                max-width 370px

                margin 0 auto
                text-align center
                responsive font-size 63px same 24px

                // icons above link
                &:before
                    position relative
                    text-shadow 0 -1px 0 black
                    responsive font-size 100px same 60px

        // second line
        &.links-item-freelansim, &.links-item-card, &.links-item-github
            .links-item-link:before
                margin-right 5px

                @media (max-width: 767px)
                    hide-icon()

        // item-specific styles
        &.links-item-portfolio .links-item-link:before
            left 5px
            icon-portfolio()

        &.links-item-vacancies .links-item-link:before
            right 3px
            icon-vacancies()

        &.links-item-freelansim
            width 35%

            .links-item-link:before
                icon-freelansim()

        &.links-item-card
            width 40%
            text-align center

            .links-item-link:before
                icon-card()

        &.links-item-github
            width 25%
            text-align right

            .links-item-link:before
                icon-github()
